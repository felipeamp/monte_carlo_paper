{
    "datasets basepath": "./datasets",
    "use all datasets": true, // when true, do not supply "datasets folders"
    // "datasets folders": [ // only used when "use all datasets" is false
    //     "adult census income",
    //     "cars",
    //     "cars with aggreg",
    //     "contraceptive",
    //     "contraceptive with aggreg",
    //     "cover type with aggreg",
    //     "kdd98 multiclass 2",
    //     "kdd98 multiclass 3",
    //     "kdd98 multiclass 5",
    //     "kdd98 multiclass 9",
    //     "mushroom",
    //     "nursery",
    //     "nursery with aggreg",
    //     "poker hand",
    //     "splice junction",
    //     "titanic survive"
