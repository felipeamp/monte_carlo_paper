    "load one dataset at a time": false,

    "criteria": [
        "Gini Gain",
        "Twoing",
        "Information Gain"
    ],

    "output folder": "./outputs/multiple levels experiment/monte carlo", // this folder files may be overwritten!

    "num trials": [5],
    "calculate t-test on accuracy": true, // when false, do not supply "t-test single-sided p-value"
    "t-test single-sided p-value": 0.1, // only used when "calculate t-test on accuracy" is true

    "max depth": 5,
    "use cross-validation": true, // when false, do not supply "num folds"
    "num folds": 10, // only used when "use cross-validation" is true

    "prunning parameters": {
        "use chi-sq test": false, // when false, do not supply "max chi-sq p-value"
        // "max chi-sq p-value": 0.1, // only used if "use chi-sq test" is true.

        "use monte carlo": true, // when false, do not supply "monte carlo parameters"
        "monte carlo parameters": {  // only used if "use monte carlo" is true.
            "upper p-value threshold": 0.4,
            "lower p-value threshold": 0.1,
            "prob monte carlo": 0.95,
            "use random order": [false, true],
        },

        "num min samples allowed": [1],
        "use second most freq class min samples": true, // when false, do not supply "second most freq class min samples"
        "second most freq class min samples": 40, // only used when "use second most freq class min samples" is true
        "use second most freq value min samples": true, // when false, do not supply "second most freq value min samples"
        "second most freq value min samples": 40, // only used when "use second most freq value min samples" is true
    },
}